<% provide(:title, 'Add Category') %> 
<h2>Add Category</h2>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@category, url: category_new_path) do |f| %> 

			<%= render 'shared/error_messages' %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :code %>
			<%= f.text_field :code %> 

			<%= f.label :description %>
			<%= f.text_field :description %> 

			<%= f.submit "Save", class: "btn btn-large btn-primary" %> 
		<% end %>
	</div>
</div>
